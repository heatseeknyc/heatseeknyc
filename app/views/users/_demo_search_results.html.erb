<div class="col-xs-12 container" id="search-results">
  <h1 id="collaborator-h1" class="text-center">Results</h1>
  <ul id="collaborator-ul" class="search-results-ul">

    <% @results.each do |r| %>
      <li class="sidebar-li">
        <hr class="underline-user text-center">

        <% if User.account_demo_user?(r) %>
          <a href="/users/<%= r.id %>" class="user-link"><%= r.first_name %> <%= r.last_name %></a>
          <%= link_to "", user_collaborations_path(current_user, collaborator_id: r), method: :post, :class => "glyphicon glyphicon-plus add-user-link" %>
          <br>
        <% else %>
          <a href="#" class="user-link"><%= r.first_name %></a>
          <a href="#" class="glyphicon glyphicon-plus add-user-link"></a>
          <br>
        <% end %>

      </li>
    <% end %>
    
  </ul>
</div>