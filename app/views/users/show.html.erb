<div class="show-layout">

  <h3>Hello, <%= @user.first_name %></h3>

  <% if current_user.permissions > 50 %>

    <div class="graph" id="bar">
      <%= column_chart(@user.bars) %>
    </div>

    <%= render "table", :user => @user %>

    <div class="graph" id="line">
      <%= line_chart(@user.lines, min: 50, max: 80, :library => {
      legend: {position: 'bottom'},
      curveType: 'none',
        explorer: {keepInBounds: true, axis: 'horizontal'}
      }) %>
    </div>

  <% else %>


    <div class="search-box"> 
        <%= form_tag users_path, method: :get do %> 
          <dl><%= label_tag :q, "Find a User" %>
          <%= text_field_tag :q, "", :class => "form-control", :autofocus => true %></dl>
          <%= submit_tag "Search", :class => "btn btn-lg btn-primary", :id => "search-button" %>
        <% end %>
    </div>
    <%= render "collaborations/collaborations_sidebar" %>
  <% end %>

</div>