<div class="show-layout">

  <h3>Hello, <%= current_user.first_name %></h3>
  <h5>Your last reading was <%= current_user.most_recent_temp %> degrees</h5>
  
  <div class="graph" id="bar">
    <%= column_chart(current_user.bars) %>
  </div>

  <%= render "table", :user => current_user %>

  <div class="graph" id="line">
    <%= line_chart(current_user.lines, min: 50, max: 80, :library => {
    legend: {position: 'bottom'},
    curveType: 'none',
      explorer: {keepInBounds: true, axis: 'horizontal'}
    }) %>
    <%= link_to 'Download PDF', pdf_download_path(current_user) %>
  </div>

</div>