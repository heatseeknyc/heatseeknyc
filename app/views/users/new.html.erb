<div class="col-md-4" id="form-id">
  <%= form_for @user do |f| %>
    <dl><%= f.label :first_name %>:
    <%= f.text_field :first_name, class: "form-control" %></dl>

    <dl><%= f.label :last_name %>:
    <%= f.text_field :last_name, class: "form-control" %></dl>

    <dl><%= f.label :address %>:
    <%= f.text_field :address, class: "form-control" %></dl>

    <dl><%= f.label :apartment %>:
    <%= f.text_field :apartment, class: "form-control" %></dl>

    <dl><%= f.label :zip_code %>:
    <%= f.text_field :zip_code, class: "form-control" %></dl>

    <dl><%= f.label :email %>:
    <%= f.email_field :email, class: "form-control" %></dl>

    <dl><%= f.label :phone_number %>:
    <%= f.text_field :phone_number, class: "form-control" %></dl>

    <dl><%= f.label :twine_name %>:
    <%= f.text_field :twine_name, name: "twine name", class: "form-control" %></dl>

